  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'rust-vm'",
      "cargo": {
        "args": [
          "build",
          "--bin=rust-vm",
          "--package=rust-vm"
        ],
        "filter": {
          "name": "rust-vm",
          "kind": "bin"
        }
      },
      "args": [
        "-cp",
        "java",
        "com.max.Hello"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'rust-vm'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=rust-vm",
          "--package=rust-vm"
        ],
        "filter": {
          "name": "rust-vm",
          "kind": "bin"
        }
      },
      "args": [
        "-cp",
        "java",
        "com.max.Hello"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}